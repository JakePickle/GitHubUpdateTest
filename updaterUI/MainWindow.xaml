<Window x:Class="updaterUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="213" Width="525">
    <Grid Margin="0,0,0,-30">
        <Grid.RowDefinitions>
            <RowDefinition Height="43*" />
            <RowDefinition Height="28*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75*" />
        </Grid.ColumnDefinitions>
        <TextBox x:Name="Text" Grid.Row="0" Width="Auto" Height="Auto" Background="Black" Foreground="WhiteSmoke" Margin="0,0,2,4" VerticalScrollBarVisibility="Auto"/>
        <ProgressBar x:Name="ProgressBar" HorizontalAlignment="Left" Height="38" Margin="61,5,0,0" VerticalAlignment="Top" Width="392" Grid.Row="1"/>
    </Grid>
</Window>